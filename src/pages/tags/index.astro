---
import Layout from '../../layouts/Layout.astro';
import { getTags } from '../../lib/wp';

const tags = await getTags();
---

<Layout title="标签列表" description="方糖博客所有标签">
  <div class="mb-8">
    <h1 class="text-2xl font-bold mb-2">标签列表</h1>
    <p class="text-gray-500">共 {tags.length} 个标签</p>
  </div>
  
  <div class="flex flex-wrap gap-3">
    {tags.map((tag) => (
      <a 
        href={`/tags/${tag.id}.html`}
        class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-full hover:bg-primary hover:text-white transition-colors"
      >
        {tag.name}
      </a>
    ))}
  </div>
</Layout>
